{% extends '_layouts/base.njk' %}

{% block page_title %}New index page title{% endblock %}

{% block page_description %}The search description for this page goes here.{% endblock %}

{% block content %}
<div class="container">
  <div class="row">
    <div class="col">
      <h1>Main headline</h1>
      <p>This is a <a href="detail-shipping-news.html">link to a book page example</a> which uses a detail layout (detail-book.njk) where data is pulled into the layout and the page calls for a specific row in the data.</p>
      <ul> 
        {% for book in library.books %}
          <li>{{ book.title }}, {{ book.author }}</li>
        {% endfor %}
     </ul>
    </div>
  </div>
  <div class="row">
    <div class="col">
    <h2>Independent bookstores in Austin</h2>
    {% for store in bookstores.stores %}
    <h3><a href="{{ store.url }}" target="_blank">{{ store.name }}</a></h3>
    <p>{{ store.address}}</p>
    <hr>
    {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
