{% extends '_layouts/base.njk' %}

{% block page_title %}{{ title }}
{% endblock %}

{% block page_description %}{{ title }} by {{ author }}
{% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
      <div class="col-sm-4">
        {% block info %}
          <img src="https://placekitten.com/420/320" alt="" class="img-fluid">
          <p>{{ author }}</p>
        {% endblock %}
      </div>
      <div class="col-sm-8">
        {% block blurb %}
          <h1>{{ title }}</h1>
          <p>{{ blurb }}</p>
        {% endblock %}
      </div>
    </div>
  </article>
{% endblock %}
